@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="privacy-policy-container py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Header with Icon -->
                <div class="text-center mb-5">
                    <div class="privacy-icon bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                        <i class="fas fa-shield-alt fa-2x"></i>
                    </div>
                    <h1 class="display-4 text-danger mb-3">@ViewData["Title"]</h1>
                    <p class="lead">Last Updated: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
                </div>

                <!-- Policy Content Card -->
                <div class="card shadow-sm border-danger mb-4">
                    <div class="card-header bg-danger text-white">
                        <h2 class="h5 mb-0"><i class="fas fa-info-circle mr-2"></i>Your Privacy Matters</h2>
                    </div>
                    <div class="card-body">
                        <h3 class="h5 text-danger mt-4">1. Information We Collect</h3>
                        <p>We collect information to provide better services to all our users, including:</p>
                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item"><i class="fas fa-circle text-danger mr-2" style="font-size: 8px;"></i>Account information (name, email address)</li>
                            <li class="list-group-item"><i class="fas fa-circle text-danger mr-2" style="font-size: 8px;"></i>Usage data (how you interact with our services)</li>
                            <li class="list-group-item"><i class="fas fa-circle text-danger mr-2" style="font-size: 8px;"></i>Device information (browser type, IP address)</li>
                        </ul>

                        <h3 class="h5 text-danger mt-4">2. How We Use Information</h3>
                        <p>We use the information we collect to:</p>
                        <div class="alert alert-light border-danger">
                            <ul class="mb-0">
                                <li>Provide, maintain, and improve our services</li>
                                <li>Develop new features and functionality</li>
                                <li>Protect our users and services</li>
                                <li>Communicate with you about updates</li>
                            </ul>
                        </div>

                        <h3 class="h5 text-danger mt-4">3. Data Protection</h3>
                        <div class="bg-light-red p-3 rounded mb-3">
                            <p><i class="fas fa-lock text-danger mr-2"></i>We implement industry-standard security measures including encryption, access controls, and regular security audits to protect your information.</p>
                        </div>

                        <h3 class="h5 text-danger mt-4">4. Your Rights</h3>
                        <p>You have the right to:</p>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="d-flex align-items-start mb-2">
                                    <div class="mr-3 text-danger"><i class="fas fa-check-circle"></i></div>
                                    <div>Access your personal data</div>
                                </div>
                                <div class="d-flex align-items-start mb-2">
                                    <div class="mr-3 text-danger"><i class="fas fa-check-circle"></i></div>
                                    <div>Request correction of data</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start mb-2">
                                    <div class="mr-3 text-danger"><i class="fas fa-check-circle"></i></div>
                                    <div>Request data deletion</div>
                                </div>
                                <div class="d-flex align-items-start mb-2">
                                    <div class="mr-3 text-danger"><i class="fas fa-check-circle"></i></div>
                                    <div>Opt-out of communications</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="text-center mt-4">
                    <h4 class="text-danger mb-3"><i class="fas fa-question-circle mr-2"></i>Questions About Our Privacy Policy?</h4>
                    <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-outline-danger"><i class="fas fa-envelope mr-2"></i>Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .privacy-policy-container {
        background-color: #f8f9fa;
    }

    .privacy-icon {
        box-shadow: 0 4px 8px rgba(217, 83, 79, 0.3);
    }

    .bg-light-red {
        background-color: rgba(217, 83, 79, 0.08);
    }

    .border-danger {
        border-color: #d9534f !important;
    }

    .card {
        border-width: 1px;
    }
</style>