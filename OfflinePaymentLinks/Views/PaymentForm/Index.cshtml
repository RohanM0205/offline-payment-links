@{
    ViewData["Title"] = "Send Payment Link";
}

@section Styles {
    <link rel="stylesheet" href="~/css/section1.css" />
    <link rel="stylesheet" href="~/css/section2.css" />
    <link rel="stylesheet" href="~/css/section3.css" />
    <link rel="stylesheet" href="~/css/section4.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}

<div class="allSections">

    <!-- 🌐 SECTION 1 - Channel, Customer, KYC/Policy/Shortfall -->
    @await Html.PartialAsync("_Section1")

    <!-- 👤 SECTION 2 - Personal & Address Details -->
    @await Html.PartialAsync("_Section2")

    <!-- 📩 SECTION 3 - Requestor, Product, Amount -->
    @await Html.PartialAsync("_Section3")

    @await Html.PartialAsync("_Section4")


    <!-- 🚀 BUTTONS -->
    <div class="button-section">
        <button class="btn-send-payment">
            <i class="fas fa-link button-icon"></i> Generate Payment Link
        </button>

        <button type="button" class="btn-reset-form">
            <i class="fas fa-rotate-left me-1"></i> Reset Form
        </button>

    </div>
</div>

@section Scripts {
    <script src="~/js/section1.js" type="module"></script>
    <script src="~/js/section2.js" type="module"></script>
    <script src="~/js/section3.js" type="module"></script>
    @*<script src="~/js/section4.js" type="module"></script>*@
    <script src="~/js/paymentButton.js" type="module"></script>
    
}


