@model AddAdminViewModel
@{
    ViewData["Title"] = "Add Admin";
}

<style>
    .add-admin-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border-top: 4px solid #d32f2f;
        position: relative;
    }

    .form-header {
        color: #d32f2f;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid rgba(211, 47, 47, 0.2);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border: 1px solid #ddd;
        border-radius: 6px;
        padding: 10px 15px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #d32f2f;
            box-shadow: 0 0 0 0.2rem rgba(211, 47, 47, 0.25);
        }

    label {
        font-weight: 500;
        color: #555;
        margin-bottom: 0.5rem;
        display: block;
    }

    .btn-danger-custom {
        background: linear-gradient(135deg, #d32f2f, #b71c1c);
        border: none;
        color: white;
        padding: 10px 25px;
        border-radius: 6px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-danger-custom:hover {
            background: linear-gradient(135deg, #b71c1c, #8e0e0e);
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(211, 47, 47, 0.3);
            color: white;
        }

    .btn-outline-danger-custom {
        border: 2px solid #d32f2f;
        color: #d32f2f;
        background: transparent;
        padding: 10px 25px;
        border-radius: 6px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-outline-danger-custom:hover {
            background: #d32f2f;
            color: white;
        }

    .text-danger {
        color: #d32f2f !important;
    }

    .illustration {
        text-align: center;
        margin-bottom: 2rem;
    }

        .illustration img {
            width: 120px;
            height: auto;
        }

    .action-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 1.5rem;
        gap: 1rem;
    }

    .dashboard-btn-container {
        text-align: center;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }
</style>

<div class="add-admin-container">
    <div class="illustration">
        <img src="https://cdn-icons-png.flaticon.com/512/3321/3321588.png" alt="Add Admin">
    </div>

    <h2 class="form-header text-center">
        <i class="fas fa-user-shield me-2"></i>Add New Admin
    </h2>

    <form asp-action="AddAdmin" method="post">
        <div class="form-group">
            <label asp-for="Email"><i class="fas fa-envelope me-2"></i>Email Address</label>
            <input asp-for="Email" class="form-control" placeholder="Enter admin email address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"><i class="fas fa-lock me-2"></i>Password</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"><i class="fas fa-lock me-2"></i>Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-danger-custom">
                <i class="fas fa-user-plus me-2"></i>Add Admin
            </button>
        </div>
    </form>

    <!-- Dashboard Button Section -->
    <div class="dashboard-btn-container">
        <a href="/Dashboard/Index" class="btn btn-outline-danger-custom">
            <i class="fas fa-tachometer-alt me-2"></i>Back to Dashboard
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">