@model List<OfflinePaymentLinks.Models.ApplicationUser>
@{
    ViewData["Title"] = "Access Requests";
}

<style>
    .access-requests-container {
        background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .access-requests-header {
        color: #d32f2f;
        font-weight: 600;
        margin-bottom: 1.5rem;
        position: relative;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid rgba(211, 47, 47, 0.2);
    }

        .access-requests-header::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 120px;
            height: 3px;
            background: linear-gradient(90deg, #d32f2f, rgba(211, 47, 47, 0.3));
        }

    .access-table {
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.05);
    }

        .access-table thead {
            background: linear-gradient(135deg, #d32f2f, #b71c1c);
            color: white;
        }

        .access-table th {
            font-weight: 500;
            letter-spacing: 0.5px;
            padding: 1rem;
        }

        .access-table td {
            padding: 1rem;
            vertical-align: middle;
            border-top: 1px solid rgba(0,0,0,0.03);
        }

        .access-table tr:nth-child(even) {
            background-color: rgba(255, 235, 238, 0.3);
        }

        .access-table tr:hover {
            background-color: rgba(255, 205, 210, 0.4);
        }

    .btn-approve {
        background: linear-gradient(135deg, #4CAF50, #2E7D32);
        border: none;
        padding: 0.375rem 1rem;
        font-weight: 500;
        box-shadow: 0 2px 4px rgba(76, 175, 80, 0.2);
    }

    .btn-deny {
        background: linear-gradient(135deg, #f44336, #c62828);
        border: none;
        padding: 0.375rem 1rem;
        font-weight: 500;
        box-shadow: 0 2px 4px rgba(244, 67, 54, 0.2);
    }

    .btn-approve:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(76, 175, 80, 0.3);
    }

    .btn-deny:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(244, 67, 54, 0.3);
    }

    .no-requests-alert {
        background: rgba(255, 235, 238, 0.5);
        border: 1px solid rgba(211, 47, 47, 0.15);
        color: #d32f2f;
        border-radius: 8px;
        padding: 1.5rem;
        text-align: center;
        font-weight: 500;
    }

    .action-buttons {
        display: flex;
        gap: 0.75rem;
    }

    .input-group {
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

</style>

<div class="d-flex justify-content-between align-items-center mb-4 mt-3">
    <form method="get" asp-action="AccessRequests" class="d-flex" style="min-width: 450px;">
        <input type="text" name="searchEmail" class="form-control me-2 shadow-sm" placeholder="Search Access Request by Email" style="width: 350px;" />
        <button type="submit" class="btn btn-outline-danger shadow-sm">
            <i class="fas fa-search"></i>
        </button>
    </form>
    <!-- Dashboard Button -->
    <a href="/Dashboard/Index" class="btn btn-danger shadow-sm" style="min-width: 200px;">
        <i class="fas fa-tachometer-alt me-1"></i> Dashboard
    </a>
</div>

@if (ViewBag.SearchPerformed == true && ViewBag.AnyFound == false)
{
    <div class="alert alert-warning" role="alert">
        No access request found for "<strong>@Html.Encode(ViewBag.SearchEmail)</strong>".
    </div>
}




<div class="access-requests-container">
    <h2 class="access-requests-header">Pending Access Requests</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table access-table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Registration Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    @* <tr>
                        <td>@user.Email</td>
                        <td>@user.RegistrationDate.ToString("dd MMM yyyy, hh:mm tt")</td>
                        <td>
                            <div class="action-buttons">
                                <form asp-action="ApproveUser" asp-controller="Admin" method="post" class="d-inline">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="btn btn-approve btn-sm text-white">Approve</button>
                                </form>
                                <form asp-action="DeleteUser" asp-controller="Admin" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="btn btn-deny btn-sm text-white">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr> *@
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.RegistrationDate.ToString("dd MMM yyyy, hh:mm tt")</td>
                        <td>
                            <div class="action-buttons">
                                <form asp-action="ApproveUser" asp-controller="Admin" method="post" class="d-flex align-items-center gap-2">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <select name="selectedRole" class="form-select form-select-sm" required>
                                        <option value="">Select Role</option>
                                        @foreach (var role in (List<string>)ViewBag.AvailableRoles)
                                        {
                                            <option value="@role">@role</option>
                                        }
                                    </select>
                                    <button type="submit" class="btn btn-approve btn-sm text-white">Approve</button>
                                </form>

                                <form asp-action="DeleteUser" asp-controller="Admin" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="btn btn-deny btn-sm text-white">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        @* <div class="no-requests-alert">
            <i class="fas fa-info-circle mr-2"></i>No pending access requests at the moment.
        </div> *@
        <div class="no-requests-container text-center py-5">
            <!-- SVG Illustration -->
            <div class="illustration-wrapper mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 250" class="empty-state-illustration">
                    <!-- Background Circle -->
                    <circle cx="200" cy="120" r="90" fill="#ffebee" opacity="0.8" />

                    <!-- Clipboard Body -->
                    <rect x="150" y="60" width="100" height="140" rx="5" fill="white" stroke="#d32f2f" stroke-width="2" />
                    <rect x="170" y="45" width="60" height="15" rx="3" fill="#f5f5f5" stroke="#d32f2f" stroke-width="1.5" />

                    <!-- Checkmarks -->
                    <g fill="none" stroke="#4CAF50" stroke-width="3" stroke-linecap="round">
                        <path d="M170 100 L185 115 L210 90" opacity="0.8" />
                        <path d="M170 130 L185 145 L210 120" opacity="0.8" />
                        <path d="M170 160 L185 175 L210 150" opacity="0.8" />
                    </g>

                    <!-- Smiley Face -->
                    <circle cx="200" cy="85" r="8" fill="#d32f2f" />
                    <path d="M190 95 Q200 105 210 95" fill="none" stroke="#d32f2f" stroke-width="2" stroke-linecap="round" />

                    <!-- Shadow -->
                    <ellipse cx="200" cy="220" rx="60" ry="10" fill="rgba(0,0,0,0.05)" filter="url(#shadow)" />
                </svg>
            </div>

            <!-- Message -->
            <div class="no-requests-message">
                <h4 class="text-muted mb-3">All Clear!</h4>
                <p class="text-muted">No pending access requests at this time.</p>
                <button class="btn btn-outline-danger mt-3" onclick="location.reload()">
                    <i class="fas fa-sync-alt mr-2"></i>Refresh
                </button>
            </div>
        </div>
    }

    <style>
        /* Illustration Styling */
        .empty-state-illustration {
            width: 100%;
            max-width: 300px;
            height: auto;
            filter: drop-shadow(0 4px 12px rgba(211, 47, 47, 0.1));
        }

        .no-requests-container {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            border: 1px solid rgba(211, 47, 47, 0.1);
            margin-top: 1rem;
        }

        .no-requests-message {
            max-width: 400px;
            margin: 0 auto;
        }

        /* Animation */
        .empty-state-illustration {
            animation: float 3s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        /* Button Styling */
        .btn-outline-danger {
            border-color: #d32f2f;
            color: #d32f2f;
            transition: all 0.3s ease;
        }

            .btn-outline-danger:hover {
                background-color: #d32f2f;
                color: white;
            }
    </style>
</div>

